<Window x:Class="StartupMaster.Views.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        Title="Startup Statistics &amp; Analysis" 
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ“Š Startup Statistics &amp; Analysis" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Comprehensive analysis of your startup configuration" 
                       FontSize="14" Opacity="0.7" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Summary Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Items -->
            <Border Grid.Column="0" Background="#1A0078D4" BorderBrush="#0078D4" 
                    BorderThickness="1" CornerRadius="8" Padding="15" Margin="0,0,5,0">
                <StackPanel>
                    <TextBlock Text="Total Items" FontSize="12" Opacity="0.7"/>
                    <TextBlock Name="TotalItemsText" Text="0" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Enabled -->
            <Border Grid.Column="1" Background="#1A00CC00" BorderBrush="#00CC00" 
                    BorderThickness="1" CornerRadius="8" Padding="15" Margin="5,0">
                <StackPanel>
                    <TextBlock Text="Enabled" FontSize="12" Opacity="0.7"/>
                    <TextBlock Name="EnabledText" Text="0" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- High Impact -->
            <Border Grid.Column="2" Background="#1AFF6B00" BorderBrush="#FF6B00" 
                    BorderThickness="1" CornerRadius="8" Padding="15" Margin="5,0">
                <StackPanel>
                    <TextBlock Text="High Impact" FontSize="12" Opacity="0.7"/>
                    <TextBlock Name="HighImpactText" Text="0" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Est. Boot Time -->
            <Border Grid.Column="3" Background="#1AFF0000" BorderBrush="#FF0000" 
                    BorderThickness="1" CornerRadius="8" Padding="15" Margin="5,0,0,0">
                <StackPanel>
                    <TextBlock Text="Est. Boot Time" FontSize="12" Opacity="0.7"/>
                    <TextBlock Name="BootTimeText" Text="0s" FontSize="32" FontWeight="Bold" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Tabs -->
        <TabControl Grid.Row="2">
            <!-- Overview Tab -->
            <TabItem Header="Overview">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <TextBlock Text="Performance Rating" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                        <Border Background="#1A0078D4" BorderBrush="#0078D4" BorderThickness="1" 
                                CornerRadius="5" Padding="15" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Name="RatingText" FontSize="24" FontWeight="Bold"/>
                                <TextBlock Name="RatingDescription" TextWrapping="Wrap" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="By Location" FontSize="16" FontWeight="Bold" Margin="0,10,0,10"/>
                        <ListBox Name="LocationList" Height="150"/>

                        <TextBlock Text="Recommendations" FontSize="16" FontWeight="Bold" Margin="0,20,0,10"/>
                        <ListBox Name="RecommendationsList" Height="200"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- High Impact Tab -->
            <TabItem Header="High Impact Items">
                <DataGrid Name="HighImpactGrid" 
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          GridLinesVisibility="Horizontal"
                          HeadersVisibility="Column">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Impact" Width="80"/>
                        <DataGridTextColumn Header="Name" Width="200"/>
                        <DataGridTextColumn Header="Command" Width="*"/>
                        <DataGridTextColumn Header="Suggestion" Width="250"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- Issues Tab -->
            <TabItem Header="Potential Issues">
                <ListBox Name="IssuesList" Margin="10"/>
            </TabItem>
        </TabControl>

        <!-- Close Button -->
        <Button Grid.Row="3" Content="Close" Width="100" Height="35" 
                HorizontalAlignment="Right" Margin="0,20,0,0"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
